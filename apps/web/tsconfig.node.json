{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "vite.config.ts",
        "scripts/*"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
            "moduleResolution": "node"
        }
    }
}
